pipeline {
    agent any
    environment {
     NAME = "FRITZ"
     COUNTRY = "CAMEROON"
    }





    stages {



        stage('build') {
            steps {
                sh '''
                echo '$NAME'
                '''
            }
        }


        stage('verify') {
            steps {
                echo 'Hello World'
            }
        }


        stage('deploy') {
            steps {
                echo 'Hello World'
            }
        }
















    }









}
